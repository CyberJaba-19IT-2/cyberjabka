 internal class Program
    {
        private static int Exchange(ulong[] arr, ulong count)
        {
            ulong num = arr[0];
            if (num >= 1)
            {
                count++;
                ulong modifiedNum = 0;
                modifiedNum = num % 2;
                arr[count] = modifiedNum;
                arr[0] = arr[0] / 2;
                return Exchange(arr, count);
            }
            for (ulong counter = count; counter > 2; counter--)
            {
                Console.Write(arr[counter]);
            }
            return 0;
        }

        private static void Main(string[] args)
        {
            ulong count = 1;
            ulong[] arr = new ulong[265999999];
            arr[0] = Convert.ToUInt64(Console.ReadLine());
            Exchange(arr, count);
            Console.WriteLine(count);
            Console.ReadKey();
        }
    }
