   static int Function(int x)
        {
            if (x <= 0)
            {
                return 0;
            }
            return Function(x - 1);
            Console.WriteLine(x);
        }
        static void Main(string[] args)
        {
            Console.WriteLine("Enter x: ");
            int x = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Total: ");
            Console.WriteLine(Function(x));
            Console.ReadKey();
        }
