using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp15
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = 0;
            int s = 1;
            int editedArraySize = 0;
            int positiveArraySize = 0;
            int negativeArraySize = 0;
            int count = 0;
            do
            {
                Console.WriteLine("Enter size: ");
                n = Convert.ToInt32(Console.ReadLine()); ;
                if (n < 2)
                {
                    Console.WriteLine("Wrong size!");
                }
            }
            while (n < 2);
            int[,] arrDefault = new int[n, n];
            for (int rowNumber = 0; rowNumber < n; rowNumber++)
            {
                Console.WriteLine($"{s} row: ");
                for (int columnNumber = 0; columnNumber < n; columnNumber++)
                {
                    arrDefault[rowNumber, columnNumber] = Convert.ToInt32(Console.ReadLine());
                    if (arrDefault[rowNumber, columnNumber] % 3 == 0)
                    {
                        editedArraySize++;
                    }
                    if (arrDefault[rowNumber, columnNumber] > 0)
                    {
                        positiveArraySize++;
                    }
                    if (arrDefault[rowNumber, columnNumber] < 0)
                    {
                        negativeArraySize++;
                    }
                }
                s++;
            }
            int[] editedArray = new int[editedArraySize];
            int[] positiveArray = new int[positiveArraySize];
            int[] negativeArray = new int[negativeArraySize];
            for (int rowNumber = 0; rowNumber < n; rowNumber++)
            {
                for (int columnNumber = 0; columnNumber < n; columnNumber++)
                {
                    if (arrDefault[rowNumber, columnNumber] % 3 == 0)
                    {
                        editedArray[count] = arrDefault[rowNumber, columnNumber];
                        count++;
                    }
                }
            }
            count = 0;
            for (int rowNumber = 0; rowNumber < n; rowNumber++)
            {
                for (int columnNumber = 0; columnNumber < n; columnNumber++)
                {
                    if (arrDefault[rowNumber, columnNumber] < 0)
                    {
                        negativeArray[count] = arrDefault[rowNumber, columnNumber];
                        count++;
                    }
                }
            }
            count = 0;
            for (int rowNumber = 0; rowNumber < n; rowNumber++)
            {
                for (int columnNumber = 0; columnNumber < n; columnNumber++)
                {
                    if (arrDefault[rowNumber, columnNumber] > 0)
                    {
                        positiveArray[count] = arrDefault[rowNumber, columnNumber];
                        count++;
                    }
                }
            }
            for (int i = 0; i < n; i++)
            {
                for (int j = 0; j < n; j++)
                    Console.Write(String.Format("{0,3}", arrDefault[i, j]));
                Console.WriteLine();
            }
            Console.WriteLine("Multiple of three: ");
            for (int i = 0; i < editedArraySize; i++)
            {
                Console.Write(editedArray[i] + " ");
            }
            Console.WriteLine();
            Console.WriteLine("Positive: ");
            for (int i = 0; i < positiveArraySize; i++)
            {
                Console.Write(positiveArray[i] + " ");
            }
            Console.WriteLine();
            Console.WriteLine("Negative: ");
            for (int i = 0; i < negativeArraySize; i++)
            {
                Console.Write(negativeArray[i] + " ");
            }
            Console.ReadKey();
        }
    }
}
